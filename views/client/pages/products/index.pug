extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/sub-menu.pug
include ../../mixins/product-layout.pug


block main
  //- .container.my-3
  //-   .row
  //-     .col-12
  //-       +box-head("Danh sách sản phẩm")

    .row 
      each item in products 
        .col-4.mb-3
          .product-item
            .inner-image
              img(src=item.thumbnail, alt=item.title)
            .inner-content
              h3.inner-title #{item.title}
                //- .inner-price-new #{item.priceNew}$
              .inner-price-old #{item.price}$
              .inner-discount -#{item.discountPercentage}%

  div(class="app__container")
    div(class="grid")
      div(class="grid__row")
        div(class="grid__column-2")
          nav(class="category")
            h3(class="category__heading")
              i.category__heading-icon.fa-solid.fa-list
              | Danh mục
              - const pathProduct = "/products"
                +sub-menu(layoutProductsCategory, pathProduct)
            //- ul(class="category-list")
            //-   li(class="category-item category-item--active")
